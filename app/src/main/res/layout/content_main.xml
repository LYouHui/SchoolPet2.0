<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.schoolpet20.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:id="@+id/activity_main_imageView_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.861" />

    <TextView
        android:id="@+id/activity_main_textView_address"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="110dp" />

    <Chronometer
        android:id="@+id/activity_main_chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:alpha="0"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_imageView_pet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/activity_main_switch_floatwindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="桌面宠物"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/activity_main_switch_lockScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="锁屏界面"
        tools:layout_editor_absoluteX="285dp"
        tools:layout_editor_absoluteY="27dp" />

</android.support.constraint.ConstraintLayout>
